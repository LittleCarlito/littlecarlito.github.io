{
  "fix": true,
  "rules": {
    "indent": ["error", "tab"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "jsdoc/require-jsdoc": ["error", {
      "publicOnly": false,
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": "*", "next": "function" }
    ]
  }
} 