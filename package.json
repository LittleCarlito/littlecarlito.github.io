{
  "name": "threejs-site-monorepo",
  "private": true,
  "type": "module",
  "copyright": "Copyright (C) 2024 Steven Meier",
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm board",
    "dev:portfolio": "pnpm --filter=@littlecarlito/portfolio dev",
    "dev:tools": "pnpm --filter=@littlecarlito/blorktools dev",
    "dev:console": "node scripts/dev-console.js",
    "board": "node scripts/blork-board.js",
    "dev:all": "pnpm turbo run dev --parallel",
    "tools": "pnpm turbo run tools --parallel",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint:count": "find . -type f -name \"*.js\" -not -path \"*/node_modules/*\" -not -path \"*/dist/*\" | wc -l | xargs -I{} echo \"🔢 Found {} JavaScript files to lint\"",
    "lint": "pnpm lint:count && echo \"🔍 Checking files...\" && eslint . --format=stylish && echo \"✅ All files pass linting!\" || (echo \"❌ Linting errors found! Run 'pnpm lint:fix' to fix them automatically.\" && exit 1)",
    "lint:fix": "pnpm lint:count && echo \"🔧 Fixing linting issues...\" && eslint . --fix --format=stylish && echo \"✅ Linting issues fixed!\"",
    "lint:test:fix": "node scripts/test-fix.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch=\"**/tests/**/*.test.js\" --testMatch=\"**/tests/**/*-test.js\" --reporters=\"./scripts/detailed-reporter.js\" --coverage --coverageReporters=\"text\" --coverageReporters=\"json-summary\" --coverageReporters=\"html\" --coverageDirectory=coverage-report || true"
  },
  "dependencies": {
    "express": "^4.18.3",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.22.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-jsdoc": "^50.6.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "license-webpack-plugin": "^4.0.2",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.2",
    "tree-kill": "^1.2.2",
    "turbo": "latest",
    "yaml": "^2.7.0"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " › ",
    "usePathForSuiteName": "true"
  }
}
