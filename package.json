{
  "name": "threejs-site-monorepo",
  "private": true,
  "type": "module",
  "copyright": "Copyright (C) 2024 Steven Meier",
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --filter=@littlecarlito/blorkboard dev",
    "dev:portfolio": "pnpm --filter=@littlecarlito/portfolio dev",
    "dev:tools": "pnpm --filter=@littlecarlito/blorktools dev",
    "dev:console": "node scripts/dev-console.js",
    "board": "pnpm --filter=@littlecarlito/blorkboard dev",
    "dev:all": "pnpm turbo run dev --parallel",
    "tools": "pnpm turbo run tools --parallel",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint:count": "find . -type f -name \"*.js\" -not -path \"*/node_modules/*\" -not -path \"*/dist/*\" -not -path \"*/public/*\" -not -path \"*/development/*\" | wc -l | xargs -I{} echo \"🔢 Found {} JavaScript files to lint\"",
    "lint": "pnpm lint:count && echo \"🔍 Checking files...\" && eslint . --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/public/**\" --ignore-pattern \"**/development/**\" --format=stylish && echo \"✅ All files pass linting!\" || (echo \"❌ Linting errors found! Run 'pnpm lint:fix' to fix them automatically.\" && exit 1)",
    "lint:fix": "pnpm lint:count && echo \"🔧 Fixing linting issues...\" && eslint . --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/public/**\" --ignore-pattern \"**/development/**\" --fix --format=stylish && echo \"✅ Linting issues fixed!\"",
    "lint:fix:commit": "pnpm lint:count && echo \"🔧 Fixing linting issues...\" && eslint . --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/public/**\" --ignore-pattern \"**/development/**\" --fix --format=stylish && git add . && git commit -m \"chore: auto-linting\" && echo \"✅ Linting issues fixed and committed!\"",
    "lint:test:fix": "node scripts/test-fix.js",
    "test": "node tests/config/setup/prepare-tests.cjs && jest --config=tests/config/jest/jest.config.cjs",
    "test:watch": "node tests/config/setup/prepare-tests.cjs && jest --config=tests/config/jest/jest.config.cjs --watch",
    "test:coverage": "CHECK_ALL_BUILDS=true JEST_COVERAGE=true node tests/config/setup/prepare-tests.cjs && jest --config=tests/config/jest/jest.config.cjs --coverage",
    "test:discover": "jest --config=tests/config/jest/jest.config.cjs --listTests",
    "test:build-deps": "IS_TEST_SPECIFIC=true node tests/config/setup/prepare-tests.cjs && jest tests/repository-tests/build-dependencies.test.js --config=tests/config/jest/jest.config.cjs",
    "test:all": "CHECK_ALL_BUILDS=true pnpm test",
    "verify-lockfile": "node tests/repository-tests/lockfile.test.js",
    "update-lockfile": "pnpm install --no-frozen-lockfile",
    "simulate-deploy": "pnpm --filter=@littlecarlito/blorkpack build && GITHUB_PAGES=true pnpm --filter=@littlecarlito/portfolio build",
    "prepare-artifacts": "node scripts/prepare-artifacts.js",
    "version-check": "node scripts/version-check.js",
    "commitlint": "commitlint",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "change": "node scripts/create-changeset.js",
    "auto-change": "node scripts/auto-changeset.js",
    "gh-pages:server": "node tests/apps/portfolio/gh-pages-simulator.js",
    "gh-pages:test": "node tests/apps/portfolio/environment/gh-pages-texture-test.js --keep-open",
    "gh-pages:debug": "chmod +x .husky/gh-pages-test && .husky/gh-pages-test",
    "gh-pages:check": "node tests/apps/portfolio/environment/gh-pages-texture-test.js --headless"
  },
  "dependencies": {
    "express": "^4.18.3",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-jsdoc": "^50.6.8",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.0.0",
    "license-webpack-plugin": "^4.0.2",
    "prettier": "^3.2.5",
    "puppeteer": "^22.15.0",
    "terser": "^5.39.0",
    "tree-kill": "^1.2.2",
    "turbo": "latest",
    "yaml": "^2.7.0"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " › ",
    "usePathForSuiteName": "true"
  },
  "version": "0.12.16",
  "pnpm": {
    "overrides": {},
    "peerDependencyRules": {
      "ignoreMissing": []
    },
    "packageExtensions": {}
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}