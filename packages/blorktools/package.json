{
  "name": "@littlecarlito/blorktools",
  "version": "0.0.2",
  "description": "Development tools for 3D assets and debugging",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "blorkType": "tool",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite",
