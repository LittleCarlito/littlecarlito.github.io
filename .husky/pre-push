#!/usr/bin/env bash
# Running pre-push checks directly without husky sourcing

# Detect if this is a recursive call from our own script
if [ -n "${HUSKY_PUSH_RUNNING}" ]; then
  echo "âœ… Detected push from our own script, skipping pre-push hook"
  exit 0
fi

# Now run the pre-push checks
# Source the shared checks script
source "$(dirname "$0")/_pre-push-checks.sh"

# If we get here, checks passed but we don't want to handle the push ourselves
# Let Git perform the actual push by exiting with success
# This allows the standard Git behavior to continue
exit 0 