#!/bin/sh

echo "ğŸ” Validating commit message format..."

# Run commitlint validation and capture result immediately
npx --no -- commitlint --edit $1
COMMITLINT_RESULT=$?

# Exit if commitlint failed
if [ $COMMITLINT_RESULT -ne 0 ]; then
  echo "âŒ Commit message validation failed."
  exit 1
fi

echo "âœ… Commit message validation passed."
exit 0