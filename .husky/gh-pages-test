#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for console output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}Starting GitHub Pages Environment Simulator...${NC}"
echo "${YELLOW}This will help detect texture loading issues that would occur on GitHub Pages${NC}"

# Run the simulator script
node tests/apps/portfolio/gh-pages-simulator.js

# The script will keep running until manually terminated
echo "${YELLOW}Access the simulated GitHub Pages at http://localhost:8080/threejs_site/${NC}"
echo "${YELLOW}Press Ctrl+C to stop the server when done testing${NC}" 